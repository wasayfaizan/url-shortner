<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Shortner</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-secondary">
    <div class="container">
      <h1 class="text-uppercase text-center my-3">URL Shortner</h1>
      <form action="/shortUrls" method="post" class="form-inline">
        <label for="fullUrl"></label>
        <input
          placeholder="enter the full url"
          type="url"
          name="fullUrl"
          id="fullUrl"
          class="form-control col mr-2"
          required
          autocomplete="off"
        />
        <div class="text-center">
          <button class="btn btn-lg btn-primary my-2 align-items-center">
            Submit
          </button>
        </div>
      </form>
      <div class="table-responsive">
        <table
          class="table table-striped table-dark table-bordered table-hover table-responsive my-5"
        >
          <thead>
            <tr>
              <th>Full URL</th>
              <th>Short URL</th>
              <th>No. Of Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrl.forEach(shortUrl => { %>
            <tr>
              <td>
                <style>
                  a {
                    text-decoration: none;
                  }
                </style>
                <a href="<%= shortUrl.fullUrl %> "><%= shortUrl.fullUrl %> </a>
              </td>
              <td>
                <a href="<%= shortUrl.shortUrl %> "
                  ><%= shortUrl.shortUrl %>
                </a>
              </td>
              <td><%= shortUrl.NoOfClicks %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
